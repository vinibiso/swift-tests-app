<?xml version='1.0' encoding='utf-8'?>
<widget id="com.biso.swift-tests" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <icon src="res/icon.png" />
    <name>SwiftTests</name>
    <description>
      App that get and runs a test based on the swift test web server
    </description>
    <author email="vinibiso@gmail.com" href="http://vocesugere.com.br">
        Vinicius Bisognin Immich
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="android-windowSoftInputMode" value="stateVisible|adjustResize" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="xwalkVersion" value="15+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="org.apache.cordova.device" spec="~0.3.0" />
    <plugin name="org.apache.cordova.console" spec="~0.2.13" />
    <plugin name="cordova-sqlite-storage" spec="~0.7.14" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="~1.4.0" />
    <plugin name="cordova-plugin-dialogs" spec="~1.2.0" />
    <plugin name="org.apache.cordova.dialogs" />
    <engine name="android" spec="~4.1.1" />
</widget>
